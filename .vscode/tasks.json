{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    { "label": "Build application and add to Rack plugin folder",
      "type": "shell",
      "command": "make install -j4",
      "options": {
        "cwd": "${workspaceRoot}",
        "env": {
          "PATH": "C:/msys64/usr/bin/;C:/msys64/mingw64/bin",
          "RACK_DIR": "${RACK_SDK}",
          "MSYSTEM": "MINGW64",
          "MSYS2_PATH_TYPE": "inherit"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    { "label": "Build application without stripping symbols and add to Rack plugin folder",
      "type": "shell",
      "command": "make ARGS=\"no-strip\" install -j4",
      "options": {
        "cwd": "${workspaceRoot}",
        "env": {
          "PATH": "C:/msys64/usr/bin/;C:/msys64/mingw64/bin",
          "RACK_DIR": "${RACK_SDK}"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    { "label": "Rebuild and make compile commands",
      "type": "shell",
      "command": "make clean && intercept-build make ARGS=\"no-strip\" install -j4",
      "options": {
        "cwd": "${workspaceRoot}",
        "env": {
          "PATH": "C:/msys64/usr/bin/;C:/msys64/mingw64/bin",
          "RACK_DIR": "${RACK_SDK}"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    { "label": "Clean",
      "type": "shell",
      "command": "make clean ",
      "options": {
        "cwd": "${workspaceRoot}",
        "env": {
          "PATH": "C:/msys64/usr/bin/;C:/msys64/mingw64/bin",
          "RACK_DIR": "${RACK_SDK}"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
