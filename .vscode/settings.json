{
  "terminal.integrated.profiles.windows": {
    "MSYS2-mingw64": {
      "path": "C:/msys64/msys2_shell.cmd",
      "args": ["-defterm", "-here", "-no-start", "-mingw64"]
    },
    "Bash-MSYS2-mingw64": {
      "path": "C:/msys64/usr/bin/bash.exe",
      "args": ["--login"],
      "env": {
        "MSYSTEM": "MINGW64",
        "CHERE_INVOKING": "1"
      }
    },
    "Zsh-MSYS2-mingw64": {
      "path": "C:/msys64/usr/bin/zsh.exe",
      "args": ["--login"],
      "env": {
        "MSYSTEM": "MINGW64",
        "CHERE_INVOKING": "1"
      }
    }
  },

  "terminal.integrated.defaultProfile.windows": "Bash-MSYS2-mingw64",
  "debug.internalConsoleOptions": "openOnSessionStart",
  //"terminal.integrated.unicodeVersion": "6",
  "terminal.integrated.fontFamily": "CaskaydiaCove NF",
  "terminal.integrated.customGlyphs": true,
  "terminal.integrated.allowChords": true,
  "terminal.integrated.detectLocale": "off",
  "cmake.configureOnOpen": false,
  "C_Cpp.codeAnalysis.exclude": {},

  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.path": "C:\\msys64\\mingw64\\bin\\clang-tidy.exe",
  //"C_Cpp.codeAnalysis.clangTidy.path": "C:\\Program Files\\LLVM\\bin\\clang-tidy.exe",
  "C_Cpp.codeAnalysis.clangTidy.args": [
    "--config-file=${workspaceFolder}\\.clang-tidy",
    "--extra-arg=--target=x86_64-pc-windows-gnu",
    //"--extra-arg-before=-fgnuc-version=12.2.0",
    "--extra-arg=-std=c++11",
    "--extra-arg=-Wsuggest-override",
    "--extra-arg=-fPIC",
    "--extra-arg=-MMD",
    "--extra-arg=-MP",
    "--extra-arg=-funsafe-math-optimizations",
    "--extra-arg=-fno-omit-frame-pointer",
    "--extra-arg=-Wno-unused-parameter",
    "--extra-arg=-DARCH_X64",
    "--extra-arg=-march=nehalem",
    "--extra-arg=-DARCH_WIN",
    "--extra-arg=-D_USE_MATH_DEFINES",
    "--extra-arg=-municode",
    "--extra-arg=-static-libstdc++",
    "--extra-arg=-DNDEBUG",
    "--extra-arg=-Wconversion"
  ],
  "C_Cpp.clang_format_path": "C:\\msys64\\mingw64\\bin\\clang-format.exe",

  "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
    "misc-static-assert",
  ]
}
